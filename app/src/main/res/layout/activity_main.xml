<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexdriedger.mypetrock.MainActivity">

    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3d3d3d"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/muscle_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="@dimen/button_padding"
            android:src="@drawable/nav_dumbbell_icon"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/food_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="@dimen/button_padding"
            android:src="@drawable/nav_protein_icon"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/toothbrush_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="@dimen/button_padding"
            android:src="@drawable/nav_toothbrush_icon"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/quote_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="@dimen/button_padding"
            android:src="@drawable/nav_quote_icon"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
